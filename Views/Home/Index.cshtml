@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Personal Form</h1>
    <table align="center" id="personalInput">
        <tr>
            <td>First Name: </td>
            <td><input type="text" maxlength="50" id="firstName" /></td>
        </tr>
        <tr>
            <td>Last Name: </td>
            <td><input type="text" maxlength="50" id="lastName" /></td>
        </tr>
        <tr>
            <td>Email: </td>
            <td><input type="text" maxlength="100" id="email" /></td>
        </tr>
        <tr>
            <td>Region: </td>
            <td>
                <select name="Region" id="regionDropdown"></select>
            </td>
        </tr>
        <tr>
            <td>Country: </td>
            <td><select name="Country" id="countriesDropdown"></select></td>
        </tr>
    </table>
    <button id="submitBtn">Submit</button>
    

</div>
<div>
   <p id="textarea"><span id="display_info"></span></p>

</div>